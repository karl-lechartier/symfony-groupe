{% extends 'base.html.twig' %}

{% block title %}LES ESPACES{% endblock %}

{% block body %}
    <h1>Gestion des Espaces</h1>
    <table class="table table-striped">
        <tr>
            <th>Nom</th>
            <th>Superficie</th>
            <th>Ouverture</th>
            <th>Fermeture</th>
            <th>Actions</th>
        </tr>
        {% for e in espaces %}
            <tr>
                <td>{{ e.nom }}</td>
                <td>{{ e.superficie }}</td>
                <td>{{ e.dateOuverture is empty ? "" : e.dateOuverture|date("d/m/Y") }}</td>
                <td>{{ e.dateFermeture is empty ? "" : e.dateFermeture|date("d/m/Y") }}</td>
                <td>
                    <a href="{{ path("app_espace_modifier", {"id": e.id}) }}" class="btn btn-primary"><span class="fas fa-pencil"></span></a>
                    <a href="{{ path("app_espace_supprimer", {"id": e.id}) }}" class="btn btn-danger"><span class="fas fa-trash-can"></span></a>
                    <a href="{{ path("app_enclo_voir", {"id": e.id}) }}" class="btn btn-warning">voir enclos</a>
                </td>


                {% endfor %}
    </table>
    <a href="{{path("app_espace_ajouter")}}" class="btn btn-success">Ajouter un espace</a>
    <a href="{{path("app_enclo_ajouter")}}" class="btn btn-success">Ajouter un enclos</a>

{% endblock %}
